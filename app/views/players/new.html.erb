<h1>Add a new Player</h1>

<%= form_for @player, :url => game_players_path do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.label :location %><br>
  <%= f.select :location_id, Location.all.collect {|p| [p.name, p.id]} %><br>
  <%= f.hidden_field :game_id, :value => @game.id%>
  <%= f.submit %>
<% end %>
